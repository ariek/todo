  .task
    padding 2px 0
    color $linkColor
    position relative
    height 34px
    overflow hidden
    transition height .15s
    display flex
    justify-content space-between
    &:focus-within
      height 66px
      display block
    + .task
      border-top 1px dotted rgba(0,0,0,.1)
    .main
      margin-bottom 2px
      display flex
      flex 1
    &[data-done="true"]
      .title input[type="text"]
        text-decoration line-through
    &[data-priority="4"]
      label.done input[type="checkbox"]
        + span
        + span:after
          border-color #808080
    &[data-priority="3"]
      label.done input[type="checkbox"]
        + span
        + span:after
          border-color $green
    &[data-priority="2"]
      label.done input[type="checkbox"]
        + span
        + span:after
          border-color $yellow
    &[data-priority="1"]
      label.done input[type="checkbox"]
        + span
        + span:after
          border-color $red
  label.done
    checkbox-label()
    input[type="checkbox"]
      + span
      + span:after
        border-color #808080
  .title
    width calc(100% - 30px)
    height 30px
    input[type="text"]
      transform scale(14/16)
      transform-origin left top
      padding 0 5px
      outline 0
      border 0
      width (16/14*100)%
      height (16/14*100)%
      background $baseColor
  .close
    display none
  .task:focus-within
    .close
      display block
  .property
    display flex
    justify-content flex-end
    position relative
    padding-left 0
    height 30px
    align-items center
  .task:focus-within
    .property
      padding-left 55px
  .tag
  .priority
  .date
  .remove
    margin-left 5px
  .remove
    position absolute
    left 0
    top 2px
    display none
  .task:focus-within
    .remove
      display block
  .date
    margin-left 0
    height 24px
    overflow hidden
    > *
      margin-left -19px
      font-size 12px
  .task:focus-within
    .date
      margin-left 5px
      > *
        margin-left 0
        font-size 14px
  .priority
    margin-left 0
    width 14px
    height 24px
    overflow hidden
    > *
      margin-left -5px
      font-size 12px
  .task:focus-within
    .priority
      margin-left 5px
      width auto
      height auto
      > *
        margin-left 0
        font-size 14px
  .tag
