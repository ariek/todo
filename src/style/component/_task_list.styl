.c-taskList
  padding 12px
  .task
    padding 2px 0
    color $linkColor
    position relative
    //height 34px
    overflow hidden
    transition height .15s
    display flex
    justify-content space-between
    outline 0
    &:focus-within
      //height 66px
      display block
    + .task
      //border-top 1px dotted rgba(0,0,0,.1)
      box-shadow 0 -0.5px 0 0 rgba(0,0,0,.05)
    .main
      margin-bottom 2px
      display flex
      flex 1
    &[data-done="true"]
      .title input[type="text"]
        text-decoration line-through
        opacity 0.7
    &[data-priority="4"]
      .done label input[type="checkbox"]
        + span
        + span:after
          border-color #808080
    &[data-priority="3"]
      .done label input[type="checkbox"]
        + span
        + span:after
          border-color $green
    &[data-priority="2"]
      .done label input[type="checkbox"]
        + span
        + span:after
          border-color $yellow
    &[data-priority="1"]
      .done label input[type="checkbox"]
        + span
        + span:after
          border-color $red
  .done
    .is-large &
      padding-top 5px
      width 36px
    label
      margin-left -5px
      checkbox-label()
      .is-large &
        margin-left 0
      input[type="checkbox"]
        + span
        + span:after
          border-color #808080
  .title
    padding 0 5px 0 0
    width calc(100% - 30px)
    .is-large &
      width calc(100% - 36px)
    form
      height 30px
      .is-large &
        height 40px
    input[type="text"]
      transform scale(14/16)
      transform-origin left top
      padding 0
      outline 0
      border 0
      width (16/14*100)%
      height (16/14*100)%
      background $baseColor
      .is-large &
        transform none
        width 100%
        height 100%
  .close
    display none
    button
      padding 0
      border 0
      outline 0
      background url('../img/chevrons-up.svg') no-repeat 50% 50% / 20px $baseColor
      width 30px
      height 30px
      overflow hidden
      text-indent -100vw
      .is-large &
        width 40px
        height 40px
  .task:focus-within
    .close
      display block
  .property
    outline 0
    display flex
    justify-content flex-end
    position relative
    padding-left 0
    height 30px
    align-items center
    .is-large &
      height 40px
  .task:focus-within
    .property
      padding-left 55px
  .tag
  .priority
  .date
    margin-left 5px
  .remove
    position absolute
    left 0
    top 2px
    display none
    .is-large &
      top 7px
  .task:focus-within
    .remove
      display block
  .date
    margin-left 0
    height 24px
    overflow hidden
    > *
      margin-left -19px
      font-size 12px
  .task:focus-within
    .date
      margin-left 5px
      > *
        margin-left 0
        font-size 14px
  .priority
    margin-left 0
    width 14px
    height 24px
    overflow hidden
    > *
      margin-left -5px
      font-size 12px
  .task:focus-within
    .priority
      margin-left 5px
      width auto
      height auto
      > *
        margin-left 0
        font-size 14px
  .tag
    margin-left 0
    width 36px
    height 24px
    overflow hidden
    > *
      margin-left -19px
      font-size 12px
  .task:focus-within
    .tag
      margin-left 5px
      width auto
      height auto
      > *
        margin-left 0
        font-size 14px
