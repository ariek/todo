  .task
    padding 2px 0
    color $linkColor
    position relative
    height 34px
    overflow hidden
    transition height .15s
    &:focus-within
      height 60px
      .close
        opacity 1
        visibility visible
    + .task
      border-top 1px dotted rgba(0,0,0,.1)
    .main
      margin-bottom 2px
      display flex
    &[data-done="true"]
      .title input[type="text"]
        text-decoration line-through
    &[data-priority="4"]
      label.done input[type="checkbox"]
        + span
        + span:after
          border-color #808080
    &[data-priority="3"]
      label.done input[type="checkbox"]
        + span
        + span:after
          border-color $green
    &[data-priority="2"]
      label.done input[type="checkbox"]
        + span
        + span:after
          border-color $yellow
    &[data-priority="1"]
      label.done input[type="checkbox"]
        + span
        + span:after
          border-color $red
  label.done
    checkbox-label()
    input[type="checkbox"]
      + span
      + span:after
        border-color #808080
  .title
    width calc(100% - 30px)
    height 30px
    input[type="text"]
      transform scale(14/16)
      transform-origin left top
      padding 0
      outline 0
      border 0
      width (16/14*100)%
      height (16/14*100)%
      background $baseColor
  .close
    opacity 0
    visibility hidden
  .property
    display flex
    justify-content flex-end
    position relative
    padding-left 55px
  .tag
  .priority
  .date
  .remove
    margin-left 5px
  .remove
    position absolute
    left 0
    top 0