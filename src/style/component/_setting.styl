.c-setting
  .nav
    position fixed
    right 5px
    top 5px
    button
      padding 0
      border 0
      outline 0
      width 30px
      height 30px
      overflow hidden
      text-indent -100vw
      background url('../img/settings.svg') no-repeat 50% 50% / 24px $baseColor
  .content
    position fixed
    left 0
    right 0
    top 0
    bottom 0
    background $baseColor
    overflow-x hidden
    overflow-y scroll
    .header
      padding 8px 12px
      text-align center
      line-height 24px
      font-size 16px
      box-shadow 0 5px 15px rgba(0,0,0,.03)
    .tag
      padding 8px 12px
      font-size 14px
      h2
        padding 8px 0
        font-size 14px
        line-height 24px
        font-weight 700
        box-shadow 0 0.5px 0 0 rgba(0,0,0,.05)
      .list
        margin-bottom 16px
        .item
          padding 8px 8px
          box-shadow 0 0.5px 0 0 rgba(0,0,0,.05)
          display flex
          justify-content space-between
          align-items center
        form
          flex 1
        .text
          padding 8px 0
        input[type="text"]
          padding 0
          display block
          transform scale(14/16)
          transform-origin left top
          width (16/14*100)%
          height (16/14*100)%
          outline 0
          border 0
          background $baseColor
          &:focus
            background $baseColor
          &::placeholder
            color rgba(0, 0, 0, .2)
        .remove
          padding-left 12px

      .add form
        display flex
        justify-content space-between
        align-items center
        padding 5px 5px 5px 12px
        border-radius 12px
        background $inputBgColor
        .text
          flex 1
        .submit
          padding-left 12px
        input[type="text"]
          padding 0
          display block
          transform scale(14/16)
          transform-origin left top
          width (16/14*100)%
          height (16/14*100)%
          outline 0
          border 0
          background $inputBgColor
          &:focus
            background $inputBgColor
          &::placeholder
            color rgba(0, 0, 0, .2)
