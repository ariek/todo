.m-schedule
  &::before
    background-image url('../img/calendar-event.svg')
  label
    width 100px
  input[type="date"]
    text-align center
    &:focus
      background transparent
    &::-webkit-inner-spin-button
    &::-webkit-clear-button
      -webkit-appearance none
    &::-webkit-calendar-picker-indicator
      position absolute
      left 0
      top 0
      bottom 0
      margin auto
      padding 0
      background transparent
      color transparent
      cursor pointer
      height (30*16/12)px
      width (130*16/12)px
      z-index 1
.m-tag
  &::before
    background-image url('../img/tag.svg')
  label
    width 80px
.m-remove
  padding 0 0 0 20px
  border 0
  outline 0
  width 50px
  height 20px
  font-size 12px
  text-align left
  height 20px
  position relative
  border-radius 3px
  color $linkColor
  //background rgba(102, 119, 136, .1)
  background transparent
  border 1px solid $linkColor
  &::before
    content ""
    position absolute
    top 0
    left 0
    height 20px
    width 20px
    background no-repeat 50% 50% / 16px 
    background-image url('../img/trash.svg')

.m-select
  padding-left 20px
  padding-right 5px
  display inline-block
  position relative
  border 1px solid transparent
  border-radius 3px
  color $linkColor
  background rgba(102, 119, 136, .1)
  font-size 12px
  line-height 18px
  overflow hidden
  &:focus-within
    border-color $linkColor
  &::before
    content: ""
    position absolute
    left 0
    top 0
    width 20px
    height 20px
    background no-repeat 50% 50% / 16px
  &[data-value=""]
    &:before
    span
      opacity 0.5
  select
    position absolute
    width 100%
    height 18px
    display block
    left 0
    top 0
    opacity 0
    background transparent
    -webkit-appearance none
    appearance none
  &.-dueDate
    &::before
      background-image url('../img/tag.svg')
  &.-status
    &::before
      background-image url('../img/tag.svg')
  &.-tag
    &::before
      background-image url('../img/tag.svg')
  &.-sort
    &::before
      background-image url('../img/tag.svg')
  &_text
    display block
