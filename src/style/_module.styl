.m-priority
.m-schedule
.m-tag
  height 20px
  position relative
  border-radius 3px
  color $linkColor
  background rgba(102, 119, 136, .1)
  &::before
    content ""
    position absolute
    top 0
    left 0
    height 20px
    width 20px
    background no-repeat 50% 50% / 16px 
  label
    width 100px
    height 20px
    display block
  input[type="date"]
  select
    padding 0 0 0 (20*16/12)px
    display block
    transform scale(12/16)
    transform-origin left top
    width (16/12*100)%
    height (16/12*100)%
    outline 0
    border 0
    background transparent
    text-overflow '...'
    appearance none
    &:focus
