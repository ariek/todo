.m-select
.m-input
  padding-left 24px
  padding-right 5px
  display inline-block
  position relative
  border 1px solid transparent
  border-radius 3px
  color $linkColor
  background rgba(102, 119, 136, .1)
  font-size 14px
  line-height 22px
  overflow hidden
  &:focus-within
    border-color $linkColor
  &::before
    content: ""
    position absolute
    left 0
    top 0
    width 22px
    height 22px
    background no-repeat 50% 50% / 16px
  &[data-value=""]
    &:before
    span
      opacity 0.5
  &_text
    display block
  input[type="text"]
  input[type="checkbox"]
  input[type="date"]
  select
    position absolute
    width 100%
    height 18px
    display block
    left 0
    top 0
    opacity 0
    background transparent
    -webkit-appearance none
    appearance none
.m-input
  &.-date
    &::before
      background-image url('../img/calendar-event.svg')
  &.-remove
    &::before
      background-image url('../img/trash.svg')
.m-select
  &.-dueDate
    &::before
      background-image url('../img/calendar-event.svg')
  &.-status
    &::before
      background-image url('../img/circle-check.svg')
