/**
 * https://raw.githubusercontent.com/hankchizljaw/modern-css-reset/master/dist/reset.min.css
 */

*,*::before,*::after
  box-sizing border-box

ul[class],ol[class]
  padding 0
  list-style none

body,h1,h2,h3,h4,p,ul[class],ol[class],figure,blockquote,dl,dd
  margin 0

html
  scroll-behavior smooth

body
  min-height 100vh
  text-rendering optimizeSpeed
  line-height 1.5

a
  &:not([class])
    text-decoration-skip-ink auto

img,picture
  max-width 100%
  display block

article
  & > *
    & + *
      margin-top 1em

input,button,textarea,select
  font inherit

img
  &:not([alt])
    filter blur(10px)

@media(prefers-reduced-motion:reduce)
  *
    animation-duration .01ms !important
    animation-iteration-count 1 !important
    transition-duration .01ms !important
    scroll-behavior auto !important

/**
 * page style
 */
linkColor = #667899
baseColor = #e7eaef

// red =     #F44336
// yellow =  #FF9800
// green =   #4CAF50
// blue =    #2196F3

checkbox-label()
  display block
  width 30px
  height 30px
  position relative
  overflow hidden
  input[type="checkbox"]
    position absolute
    left -30px
    top -30px
    + span
      margin 2px
      display block
      width 26px
      height 26px
      border-radius 13px 
      text-indent -300px
      position relative
      &:after
        content ""
        position absolute
        left 3px
        top 5px
        width 18px
        height 9px
        border 4px solid rgba(0,0,0,.1)
        border-width 0 0 4px 4px
        transform rotate(-45deg)
    &:checked
      + span 
        &:after
          border-color linkColor
body
  color rgba(0,0,0,.6)
  background baseColor
  font-family: system-ui, "Hiragino Sans", "YuGothic", "Arial", sans-serif
  font-size 14px
  line-height 1
  height 100vh
  overflow hidden
input
select
  color inherit
  font-size 16px
button
label
  cursor pointer
.l-container
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  overflow hidden  
.l-page
  position fixed
  left 0
  right 0
  top 0
  bottom 60px
  overflow-x hidden
  overflow-y auto
.c-taskList
  padding 20px 10px
  .until
    text-align center
    font-size 12px
    font-weight bold
    color rgba(0,0,0,.4)
    position relative
    &:before
      content ""
      position absolute
      left 0
      right 0
      top 50%
      display block
      width 100%
      height 1px
      background rgba(0,0,0,.1)
    span
      padding 0 10px
      position relative
      display inline-block
      background baseColor
  .task
    padding 5px 0
    color linkColor
    display flex
    position relative
    + .task
      border-top 1px dotted rgba(0,0,0,.1)
    &.is-done
      .title input[type="text"]
        text-decoration line-through
  label.done
    checkbox-label()
  .title
    width calc(100% - 120px)
    height 30px
    input[type="text"]
      transform scale(14/16)
      transform-origin left top
      padding 0 (16/14*10)px
      outline 0
      border 0
      border-radius (16/14*15)px
      width (16/14*100)%
      height (16/14*100)%
      background baseColor

.c-taskInput
  z-index 1
  position fixed
  left 0
  right 0
  bottom 0
  padding 10px
  background baseColor
  box-shadow 0 -5px 10px rgba(0,0,0,.05)
  .title
    padding 10px 40px 10px 20px
    border-radius 20px
    width calc(100% - 70px)
    height 40px
    background baseColor
    box-shadow 1px 1px 2px rgba(0,0,0,0.15) inset, 1px 1px 2px rgba(255,255,255,1)
  .titleInner
    width 100%
    height 20px
  input[type="text"]
    padding 0
    display block
    transform scale(14/16)
    transform-origin left top
    width (16/14*100)%
    height (16/14*100)%
    outline 0
    border 0
    background baseColor
    &:focus
      background baseColor
  button.add
    position absolute
    right 85px
    top 15px
    width 30px
    height 30px
    overflow hidden
    text-indent -999px
    font-size 12px
    font-weight bold
    border 0
    border-radius 15px
    color linkColor
    background url('../img/add.svg') no-repeat 50% 50% baseColor
    box-shadow 1px 1px 2px rgba(0,0,0,0.15), 1px 1px 2px rgba(255,255,255,1) inset
    outline none
  .priority
  .schedule
    position absolute
    top 15px
  .priority
    right 40px
  .schedule
    right 10px
